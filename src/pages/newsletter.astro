---
import Main from '@/layouts/Main.layout.astro'
import Root from '@/layouts/Root.layout.astro'

import NewsletterForm from '@/components/view/newsletter-form'
---

<Root>
  <Main>
    <div class="flex flex-col items-center justify-center max-w-md pt-24 mx-a">
      <header class="w-full">
        <h1 class="text-xl font-medium">Suscríbete a mi newsletter</h1>
        <p class="text-muted-foreground">
          para estar atento a mis futuros artículos.
        </p>
      </header>
      <NewsletterForm client:load />
    </div>
  </Main>
</Root>
